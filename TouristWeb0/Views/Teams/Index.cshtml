@model IEnumerable<TouristWeb0.Team>

@{
    ViewData["Title"] = "Index";
}

<h1>Заявки на змагання @ViewBag.Name0</h1>

<p>
    <a asp-action="Create"asp-route-id="@ViewBag.CompId0"asp-route-name="@ViewBag.Name0">Створити нову заявку</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FileDocument)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FileDocument)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TeamId">Редагувати</a> |
                <a asp-action="Details" asp-route-id="@item.TeamId">Детально про заявку</a> |
                <a asp-action="Delete" asp-route-id="@item.TeamId">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
